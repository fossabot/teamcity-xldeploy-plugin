<?xml version="1.0"?>
<assembly>
  <id>plugin-assembly</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <files>
     <file>
         <source>${project.basedir}/../teamcity-plugin.xml</source>
         <filtered>true</filtered>
     </file>
     <file>
         <source>target/xldeploy-agent.zip</source>
         <outputDirectory>agent</outputDirectory>
     </file>
  </files>
  <moduleSets>
    <moduleSet>
       <useAllReactorProjects>true</useAllReactorProjects>
       <includes>
           <include>xebialabs.teamcity.xldeploy:teamcity-xldeploy-plugin-server</include>
           <include>xebialabs.teamcity.xldeploy:teamcity-xldeploy-plugin-common</include>
       </includes>
       <binaries>
           <outputDirectory>server</outputDirectory>
           <unpack>false</unpack>
           <dependencySets>
               <dependencySet>
                    <includes>
                         <include>*</include>
                    </includes>
               </dependencySet>
           </dependencySets>
       </binaries>
    </moduleSet>
  </moduleSets>
</assembly>

